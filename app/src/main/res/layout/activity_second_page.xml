<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:ignore="ExtraText">


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="483dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="150dp"
            android:columnCount="2"
            android:rowCount="2"><![CDATA[>

            ]]>

            <LinearLayout
                android:id="@+id/melanomaLayout"
                android:layout_width="150dp"
                android:layout_height="237dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginEnd="0dp"
                android:background="@color/blue_color"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/MelanomatitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Melanoma"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/MelanomadescriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Melanoma is a type of skin cancer that develops from the pigment-producing cells known as melanocytes." />

                <TextView
                    android:id="@+id/melanomaWikiLinkTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:clickable="true"
                    android:minHeight="48dp"
                    android:onClick="openWikipediaLink"
                    android:text="More (Wikipedia)"
                    android:textColor="@color/colorPrimary"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/SkinCancerLayout"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginEnd="0dp"
                android:background="@color/light_pink_color"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/SkinCancertitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Skin Cancer"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/SkinCancerdescriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Skin cancer refers to the abnormal growth of skin cells, often due to exposure to ultraviolet (UV) radiation." /> <!-- Updated description -->

                <TextView
                    android:id="@+id/SkinCancerwikiLinkTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:clickable="true"
                    android:minHeight="48dp"
                    android:onClick="openWikipediaLink"
                    android:text="More (Wikipedia)"
                    android:textColor="@color/colorPrimary"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/keratosisLayout"
                android:layout_width="159dp"
                android:layout_height="237dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="245dp"
                android:background="@color/green_color"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/keratosisTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="keratosis"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/keratosisDescriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Keratosis is a common skin condition characterized by the growth of keratin on the skin's surface." />

                <TextView
                    android:id="@+id/keratosisWikiLinkTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:clickable="true"
                    android:minHeight="48dp"
                    android:onClick="openWikipediaLink"
                    android:text="More (Wikipedia)"
                    android:textColor="@color/colorPrimary"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lesionLayout"
                android:layout_width="159dp"
                android:layout_height="245dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="@color/orangered"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/lesionTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Lesion"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lesionDescriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Lesion is a type of skin abnormality or injury that may appear as a sore, lump, or discoloration on the skin." />

                <TextView
                    android:id="@+id/lesionWikiLinkTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:clickable="true"
                    android:minHeight="48dp"
                    android:onClick="openWikipediaLink"
                    android:text="More (Wikipedia)"
                    android:textColor="@color/colorPrimary"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

        </GridLayout>

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="Start" />

    </RelativeLayout>
</layout>
